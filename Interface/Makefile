# Variables
PYTHON = python3
SCRIPT = main.py

# Default target
run:
	$(PYTHON) $(SCRIPT)

# Clean target (optional, if needed for cleanup tasks)
clean:
	rm -rf __pycache__

# Help target to display usage
help:
	@echo "Usage:"
	@echo "  make run      - Run the Python script (main.py)"
	@echo "  make clean    - Remove temporary files (__pycache__)"
	@echo "  make help     - Display this help message"

